{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "dsfr-connect",
  "ts-node": {
    "compilerOptions": {
      "module": "nodenext",
      "target": "esnext"
    }
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@dsfrc/dsfr-connect/*": ["../../packages/dsfr-connect/*"]
    },
    "composite": false,
    "declaration": true,
    "declarationDir": "./dist/",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "builder-dist"]
}
